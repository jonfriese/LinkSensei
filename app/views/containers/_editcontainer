<div class="modal fade" id="modalcont_edit_<%= dom_id container %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Edit Container</h4>
      </div>
      <div class="modal-body">
        <%= form_for [@user, container], html: {role:"form"}  do |f| %>
            <% if container.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@container.errors.count, "error") %> prohibited this container from being saved:</h2>
                <ul>
                  <% @container.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                 <% end %>
                </ul>
              </div>
        <% end %>
          <div class="form-group">
            <div class="field">
              <%= f.label :name %><br />
              <%= f.text_field :name, class:"form-control" %>
            </div>

            <div class="field">
              <%= f.label :description %><br />
              <%= f.text_field(:description, rows: 10, class:"form-control") %>
            </div>
          </div>
          <div class="modal-footer">
            <div class="actions" style="margin-top: 1em;">
              <%= f.submit(class: "btn btn-default btn-small custombtn")%>
            </div>
          </div>
        <% end %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
