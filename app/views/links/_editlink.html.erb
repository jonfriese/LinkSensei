<div class="modal fade" id="modal_linkedit_<%= dom_id link %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Change it</h4>
      </div>
      <div class="modal-body">
        <%= form_for [@user, container.link], html: {role:"form"}  do |f| %>
          <% if @link.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h2>
              <ul>
                <% @link.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <div class="field">
              <%= f.label :url %><br />
              <%= f.text_field :url, class: "form-control" %>
            </div>

            <div class="field">
              <%= f.label :name %><br />
              <%= f.text_field :name, class: "form-control" %>
            </div>

            <div class="field">
              <%= f.label :description %><br />
              <%= f.text_field :description, rows: 10, class: "form-control" %>
            </div>
          </div>
          <div class="modal-footer">
            <div class="actions" style="margin-top: 1em;">
            <%= f.submit(class: "btn btn-default btn-small custombtn") %>
            </div>
          </div>
        <% end %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -
