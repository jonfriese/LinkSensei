<% @staging.each do |staging| %>
  <p><span><b>New Container</b></span>
    <% if on_my_page? %><%= link_to '', new_user_container_path(@user) , class:"glyphicon glyphicon-plus", id: "new_container"%><% end %></p>
  <p><span><b>New Links</b></span>
    <% if on_my_page? %><%= link_to "", '#', class:"glyphicon glyphicon-plus", id: "stagingnew", "data-toggle" => "modal", 'data-target' => "#modal_link_" + dom_id(staging) %><% end%></p>
  <hr id="welcome-page-hr">
  <table class="staging-left">
  <% staging.links.each do |link| %>
  <tbody>
    <tr>
      <td colspan="2"><%= link_to link.name, url_with_protocol(link.url), :target => '_blank' %>
      <% if on_my_page? %>
        <%= link_to '', [staging, link], method: :delete, data: { confirm: 'Are you sure?' },
          class:"glyphicon glyphicon-trash container-icon", id: "staging_trash_link" %>
        <%= link_to '', edit_container_link_path(staging, link), class: "glyphicon glyphicon-edit container-icon", id: "staging_edit_link" %>
      </td><% end %>
    </tr>
    <tr>
      <td><%= link.description %></td>
    </tr>
  </tbody>
  <% end %>
  </table>
  <%= render partial: 'links/newlink', locals: {container: staging} %>
<% end %>

